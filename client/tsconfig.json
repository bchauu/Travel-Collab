{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "types": ["node", "react"],
    "typeRoots": ["./node_modules/@types", "./declarations.d.ts"],
    "baseUrl": "./",
    "paths": {
      "@env": ["./src/env"]
